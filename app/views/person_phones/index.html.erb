<p id="notice"><%= notice %></p>

<h1>Person Phones</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_phones.each do |person_phone| %>
      <tr>
        <td><%= person_phone.person %></td>
        <td><%= person_phone.phone %></td>
        <td><%= link_to 'Show', person_phone %></td>
        <td><%= link_to 'Edit', edit_person_phone_path(person_phone) %></td>
        <td><%= link_to 'Destroy', person_phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person Phone', new_person_phone_path %>
